    <script>
        // Store flashcard data
        const flashcards = [
            {
                question: "What is a Fair Value Gap (FVG)?",
                answer: "An imbalance or inefficiency in price delivery where the market moves so fast that it leaves a gap between the wicks of candles. This creates a zone where price is likely to return to 'fill' the gap and restore balance."
            },
            {
                question: "Define an Order Block",
                answer: "The last opposing candle before a strong move in price. A bullish order block is the last down candle before a move up, and a bearish order block is the last up candle before a move down. These areas often act as support/resistance."
            },
            {
                question: "What is a Liquidity Grab?",
                answer: "A move in price designed to trigger stop losses above recent highs or below recent lows. Smart money hunts these liquidity pools before reversing price in the intended direction."
            },
            {
                question: "Explain Market Structure Break",
                answer: "When price breaks above a previous high (bullish) or below a previous low (bearish), indicating a potential change in trend direction. ICT traders look for these breaks to confirm bias."
            }
        ];

        let currentCardIndex = 0;
        let isFlipped = false;

        function switchMode(mode) {
            // Hide all content areas
            document.querySelectorAll('.content-area').forEach(area => {
                area.classList.remove('active');
            });
            
            // Remove active class from all buttons
            document.querySelectorAll('.mode-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Show selected content area
            document.getElementById(mode + '-mode').classList.add('active');
            
            // Add active class to clicked button
            event.target.classList.add('active');
        }

        function flipCard() {
            const flashcard = document.getElementById('flashcard');
            flashcard.classList.toggle('flipped');
            isFlipped = !isFlipped;
        }

        function nextCard() {
            currentCardIndex = (currentCardIndex + 1) % flashcards.length;
            updateCard();
            updateProgress();
        }

        function previousCard() {
            currentCardIndex = (currentCardIndex - 1 + flashcards.length) % flashcards.length;
            updateCard();
            updateProgress();
        }

        function updateCard() {
            const flashcard = document.getElementById('flashcard');
            const currentCard = flashcards[currentCardIndex];
            
            // Reset flip state
            if (isFlipped) {
                flashcard.classList.remove('flipped');
                isFlipped = false;
            }
            
            // Update content after animation
            setTimeout(() => {
                flashcard.querySelector('.card-front h3').textContent = currentCard.question;
                flashcard.querySelector('.card-back p').textContent = currentCard.answer;
            }, 300);
        }

        function updateProgress() {
            const progress = ((currentCardIndex + 1) / flashcards.length) * 100;
            document.getElementById('progress').style.width = progress + '%';
        }

        function markCorrect() {
            // In a real app, this would update spaced repetition algorithm
            console.log('Marked as correct');
            nextCard();
        }

        function markIncorrect() {
            // In a real app, this would schedule for more frequent review
            console.log('Marked for review');
            nextCard();
        }

        function loadHistoricalData() {
            // In a real app, this would load actual historical data
            alert('Loading historical session data...\n\nThis would connect to TradingView API to load real 1-minute chart data from a previous NY session for analysis.');
        }

        // Add some interactivity to confluence items
        document.querySelectorAll('.confluence-item').forEach(item => {
            item.addEventListener('click', function() {
                this.style.borderLeftColor = '#00ff88';
                setTimeout(() => {
                    this.style.borderLeftColor = '#667eea';
                }, 1000);
            });
        });
    </script>
</body>
